<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean name="user" class="com.Eduardo.User" scope="prototype">
        <constructor-arg index="0" value="Marius" />
        <constructor-arg index="1" value="Andrei" />
        <constructor-arg index="2" value="1995.09.12"/>
    </bean>

    <bean name="flight" class="com.Eduardo.Flight" scope="prototype">
        <constructor-arg index="0" value="FL-124" />
        <constructor-arg index="1" value="Maldive" />
        <constructor-arg index="2" value="2019.02.6 12:16" />
        <constructor-arg index="3" type="int" value="1200" />
        <constructor-arg index="4" type="int" value="160" />
    </bean>

    <bean name="airportManager" class="com.Eduardo.AirportManager" />

</beans>
